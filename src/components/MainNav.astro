<style>
  /* automaticaly scoped to MainNav component by Astro*/
  .skip-nav-link {
    position: absolute;
    transition: transform 0.3s ease;
    transform: translate3d(0, -120%, 0);
    background-color: var(--c-accent1);
    color: var(--c-text);
    padding: var(--size-3);
    border-radius: var(--radius-2);
    left: var(--size-2);
    text-underline-offset: var(--size-1);
    font-weight: var(--font-weight-6);
  }
  .skip-nav-link:focus {
    transform: translate3d(0, 0, 0);
    z-index: var(--layer-important);
  }

  nav {
    z-index: 10;
    width: 100%;
    padding-block: 1.2rem;
    padding-inline: 1rem;
    transition: background-color 800ms cubic-bezier(0.64, 0.04, 0.26, 0.87);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-link {
    z-index: 20;
    display: flex;
    color: var(--c-text);
  }

  .logo-link:focus-visible,
  .nav-link:focus-visible {
    outline: 4px solid var(--c-accent1);
    outline-offset: 0.3em;
    border-radius: var(--radius-2);
  }

  .nav-links {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-evenly;
    gap: var(--size-5);
    position: fixed;
    z-index: 10;
    inset: 0;
    background-color: var(--c-accent2);
    padding-block: 5.5rem 2.5rem;
    padding-inline: var(--size-5);
    border-bottom: 4px solid var(--c-accent1);
    text-align: center;
    transform: translate3d(100%, 0, 0);
    transition: transform 0.3s cubic-bezier(0.65, 0.05, 0.36, 1);
  }

  .navbtn--accent {
    background-color: var(--c-accent1);
    padding: var(--size-3) var(--size-5);
    border-radius: var(--radius-2) var(--radius-3) var(--radius-2)
      var(--radius-2);
    transition: 0.3s background-color ease;
    border: var(--size-1) solid var(--c-accent1);
  }
  .navbtn--accent:hover {
    background-color: var(--c-accent2);
  }

  li[role="none"],
  .nav-link {
    width: 100%;
    list-style: none;
    font-size: 1.1rem;
    color: var(--c-text);
    text-decoration: none;
    font-size: var(--fs-f-large);
    font-weight: var(--font-weight-6);
  }

  .navbtn--menu[aria-expanded="true"] + .nav-links {
    transform: translate3d(0, 0, 0);
    height: 100vh;
  }

  /* Hamburger button */
  .nav-hamburger {
    position: relative;
    display: flex;
    z-index: 20;
    justify-content: center;
    align-items: center;
    width: 80px;
    height: 80px;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
  }
  .nav-hamburger__icon {
    width: 50px;
    height: 5px;
    background: currentColor;
    border-radius: 5px;
    transition: transform 0.3s ease-in-out, background-color 0.2s ease-in-out;
  }
  .nav-hamburger__icon::before,
  .nav-hamburger__icon::after {
    content: "";
    position: absolute;

    width: 50px;
    height: 5px;
    background: currentColor;
    border-radius: 5px;
    transition: transform 0.3s ease-in-out;
  }
  .nav-hamburger__icon::before {
    transform: translateY(-16px);
  }
  .nav-hamburger__icon::after {
    transform: translateY(16px);
  }
  /* Hamburger icon animation */
  .navbtn--menu[aria-expanded="true"] > .nav-hamburger__icon {
    transform: translateX(-50px);
    background-color: transparent;
  }
  .navbtn--menu[aria-expanded="true"] .nav-hamburger__icon::before {
    transform: rotate(45deg) translate(35px, -35px);
  }
  .navbtn--menu[aria-expanded="true"] > .nav-hamburger__icon::after {
    transform: rotate(-45deg) translate(35px, 35px);
  }

  /* media querries */
  @media (min-width: 48em) {
    nav {
      padding-inline: unset;
    }

    .nav-container {
      max-width: var(--container-w-large);
      margin-inline: auto;
    }

    .navbtn--menu {
      display: none;
    }
    .nav-links {
      position: static;
      transform: translate3d(0, 0, 0);
      flex-direction: row;
      border: 0;
      z-index: 0;
      padding: 0;
      inset: 0;
      background-color: transparent;
      gap: var(--size-fluid-3);
    }

    .navbtn--menu[aria-expanded="true"] + .nav-links {
      height: unset;
    }

    li[role="none"],
    .nav-link {
      width: initial;
    }

    /* hover line animation */
    .nav-link {
      position: relative;
      font-size: var(--fs-large);
    }
    .custom-underline::after {
      content: "";
      position: absolute;
    }
    li[role="none"] .custom-underline::after {
      top: 120%;
      height: var(--size-1);
      left: 0;
      right: 0;
      background-color: var(--c-text);
      transform-origin: center left;
      transform: scaleX(0);
      transition: 0.5s var(--ease-out-3) transform;
    }
    li[role="none"]:hover .custom-underline::after {
      transform: scaleX(1);
      transition: 0.3s cubic-bezier(0.61, 0.48, 0.15, 1) transform;
    }
  }

  @media (max-width: 47.9375em) {
    /* Safari only ATM https://caniuse.com/css-has */
    @supports (selector(:has(p))) {
      /* Supported! */
      body.stop-scrolling:has(.navbtn--menu[aria-expanded="true"]) {
        height: 100%;
        overflow: hidden;
      }
    }
    @supports not (selector(:has(p))) {
      /* not supported! */
      body.stop-scrolling {
        height: 100%;
        overflow: hidden;
      }
    }
  }
</style>

<script>
  const navnavbtn: HTMLElement | null = document.querySelector("#menu-navbtn");
  if (
    navnavbtn instanceof HTMLElement &&
    navnavbtn.hasAttribute("aria-expanded")
  ) {
    navnavbtn.addEventListener("click", () => {
      const prevExpandedState: boolean = JSON.parse(
        navnavbtn.getAttribute("aria-expanded")!
      );
      const isExpanded = !prevExpandedState;
      navnavbtn.setAttribute("aria-expanded", isExpanded.toString());

      // disable scroll using css
      if (isExpanded && document.querySelector("body") !== null) {
        document.querySelector("body")?.classList.add("stop-scrolling");
      } else if (
        document.querySelector("body")?.classList.contains("stop-scrolling") &&
        isExpanded === false
      ) {
        document.querySelector("body")?.classList.remove("stop-scrolling");
      }
    });
  }
</script>
