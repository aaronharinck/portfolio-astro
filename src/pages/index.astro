---
import Layout from "@layouts/BaseLayout.astro";
import Card from "@components/Card.astro";
import MovingPicture from "@components/MovingPicture.astro";
---

<Layout
  title="Aaron Harinck | Creative developer portfolio"
  description="Looking to hire a creative website developer / digital marketeer? Aaron develops and designs digital front-end solutions."
>
  <main>
    <div class="intro">
      <header class="intro-header">
        <div class="intro-header-text">
          <h1>
            <span class="title--small">Aaron Harinck.</span>
            <span class="text-gradient">Creative</span> front-end developer, based
            in Belgium
          </h1>
          <p class="intro-text">
            I create kick-ass websites & apps, from design to code
          </p>
          <div class="buttons-wrapper">
            <a href="#contact" class="btn btn-link btn-primary">Get in touch</a>
            <a href="#about" class="btn btn-text btn-muted btn-icon">
              Scroll for more
              <svg class="icon icon-down">
                <use xlink:href="sprite.svg#arrow-down"></use>
              </svg>
            </a>
          </div>
        </div>
        <div class="intro-header-img">
          <MovingPicture />
        </div>
      </header>
      <div class="experience-banner">
        <h2 class="experience-title">Work experience</h2>
        <div class="experience-logos">
          <a
            href="https://studiohyperdrive.be/"
            target="_blank"
            rel="noreferer noopener"
          >
            <svg class="exp-logo" role="img">
              <title>Studio Hyperdrive</title>
              <use xlink:href="sprite.svg#logo-shd"></use>
            </svg>
          </a>

          <a
            href="https://www.wiseo.be/"
            target="_blank"
            rel="noreferer noopener"
          >
            <svg class="exp-logo" role="img">
              <title>Wiseo</title>
              <use xlink:href="sprite.svg#logo-wiseo"></use>
            </svg>
          </a>
          <a
            href="https://superkraft.be/"
            target="_blank"
            rel="noreferer noopener"
          >
            <svg class="exp-logo" role="img">
              <title>Superkraft</title>
              <use xlink:href="sprite.svg#logo-superkraft"></use>
            </svg>
          </a>
          <a
            href="https://www.durf2030.eu/"
            target="_blank"
            rel="noreferer noopener"
          >
            <svg class="exp-logo" role="img">
              <title lang="nl">Stad Kortrijk - Durf2030</title>
              <use xlink:href="sprite.svg#logo-stad-kortrijk"></use>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <ul role="list" class="link-card-grid">
      <Card
        href="https://docs.astro.build/"
        title="Documentation"
        body="Learn how Astro works and explore the official API docs."
      />
      <Card
        href="https://astro.build/integrations/"
        title="Integrations"
        body="Supercharge your project with new frameworks and libraries."
      />
      <Card
        href="https://astro.build/themes/"
        title="Themes"
        body="Explore a galaxy of community-built starter themes."
      />
      <Card
        href="https://astro.build/chat/"
        title="Chat"
        body="Come say hi to our amazing Discord community. ❤️"
      />
    </ul>
  </main>
</Layout>

<style>
  :root {
    --letter-gradient: linear-gradient(20deg, var(--c-accent1), var(--grape-4));
  }

  main {
    margin: auto;
    padding: var(--size-fluid-2);
  }

  h1 {
    margin: 2rem 0;
    max-width: var(--size-content-1);
  }

  .title--small {
    font-size: var(--fs-f-regular);
    display: block;
    color: var(--c-muted);
  }

  .text-gradient {
    font-weight: var(--font-weight-8);
    background-image: var(--letter-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100% 200%;
    background-position-y: 100%;
    animation: pulse 3.3s ease-in-out infinite;
  }

  .intro-text {
    line-height: 1.6;
    margin: var(--size-1) 0;
    padding: var(--size-1);
    font-size: var(--fs-large);
  }

  .buttons-wrapper {
    margin-block: var(--size-6);
    display: flex;
    gap: var(--size-8);
  }

  /* buttons */
  .btn {
    padding: var(--size-3);
    display: inline-block;
    font-size: var(--fs-large);
    transition: 0.3s transform ease, 0.3s background-color ease;
  }

  a.btn {
    text-decoration: none;
    color: var(--c-text);
  }
  .btn.btn-link {
    font-weight: var(--font-weight-6);
    border-radius: var(--radius-2) var(--radius-3) var(--radius-2)
      var(--radius-2);
  }

  .btn.btn-primary {
    background-color: var(--c-accent1);
    border: var(--size-1) solid var(--c-accent1);
  }
  .btn.btn-primary:hover {
    background-color: var(--c-text);
    color: var(--c-accent1);
    transform: scale3d(1.1, 1.1, 1);
  }

  .btn.btn-muted {
    color: var(--c-muted);
  }

  /* icons */
  .btn.btn-icon {
    display: flex;
    gap: var(--size-2);
    align-items: center;
  }
  .btn .icon {
    height: 16px;
    width: 16px;
    transition: 0.3s transform ease;
  }
  .btn:hover .icon {
    transform: translateY(var(--size-1));
  }

  .btn .icon-down {
    transition: 0.3s transform cubic-bezier(0.47, 0.48, 0.39, 2.16);
  }
  /* experience */

  .experience-banner {
    max-width: min(90%, 60rem);
    margin-inline: auto;
    margin-block: var(--size-8);
    text-align: center;
    color: var(--c-muted);
  }
  .experience-title {
    font-size: var(--fs-regular);
    margin-block-end: var(--size-6);
  }
  .experience-logos {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--size-8);
  }
  .experience-logos .exp-logo {
    fill: var(--c-muted);
    color: var(--c-muted);
    width: var(--size-12);
    max-height: var(--size-8);
    transition: 0.3s color ease, 0.3s all ease;
  }
  .exp-logo:hover {
    fill: var(--c-text);
    color: var(--c-text);
  }

  @keyframes pulse {
    0%,
    100% {
      background-position-y: 0%;
    }
    50% {
      background-position-y: 80%;
    }
  }

  @media (min-width: 48em) {
    .intro-header {
      display: flex;
      gap: 2rem;
      justify-content: space-between;
      align-items: center;
      max-inline-size: var(--container-w-large);
      margin-inline: auto;
    }

    .intro-text {
      max-width: var(--size-content-1);
    }

    .intro-header-text {
      flex: 4;
    }

    .intro-header-img {
      flex: 3;
    }
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
    color: var(--c-accent1);
  }
</style>
